{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "paths":{
            "api/*": ["api/*"],
            "app/*": ["app/*"],
            "components/*": ["components/*"],
            "redux/*": ["redux/*"],
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "app/*.js", "components/layout/MegaLayout.tsx", "pages/api/user/userApi.js",
    ],
    "exclude": [
        "node_modules"
    ]
}